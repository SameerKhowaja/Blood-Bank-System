@{
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
    ViewData["Title"] = "Blood Bank Blood Donor";
}

<div id="wrapper">
    <!-- Navigation -->
    <nav class="navbar navbar-fixed-top" role="navigation">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                    <i class="fa fa-caret-down fa-lg" aria-hidden="true"></i>
                    <span class="icon-bar"></span>
                </button>

                <a class="navbar-brand logoimg" href="@Url.Action("Index", "Dashboard")">
                    <img src="~/assets/images/logo.png" alt="LOGO" style="width: 190px; height: 45px;">
                </a>
            </div>

            <div class="collapse navbar-collapse" id="myNavbar">
                <ul class="nav navbar-nav side-nav">
                    <li>
                        <a href="@Url.Action("Index", "Dashboard")"><i class="fa fa-home"></i> Dashboard</a>
                    </li>
                    <li>
                        <a href="@Url.Action("NewDonor", "Dashboard")"><i class="fa fa-user"></i> New Donor</a>
                    </li>
                    <li>
                        <a href="@Url.Action("BloodDonors", "Dashboard")"><i class="fa fa-plus-square"></i> Blood Doners</a>
                    </li>
                    <li>
                        <a href="@Url.Action("BloodRequest", "Dashboard")"><i class="fa fa-tint"></i> Blood To Request</a>
                    </li>
                    <li>
                        <a href="@Url.Action("BloodDetail", "Dashboard")"><i class="fa fa-eraser"></i> Blood Detail</a>
                    </li>
                    <li>
                        <a href="@Url.Action("BloodRecievers", "Dashboard")"><i class="fa fa-address-book"></i> Blood Recievers</a>
                    </li>
                    <li>
                        <a href="#"><i class="fa fa-sign-out"></i> Logout</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- content -->
    <div id="page-wrapper">
        <div class="container-fluid">
            <div class="row" id="main">
                <div class="col-lg-12 well" id="content">
                    <h1 class="text-center">Blood Donors List</h1>

                    <div class="row">
                        <div class="input-group col-lg-12">
                            <input type="text" class="form-control" placeholder="Search">
                        </div>
                    </div>

                    <!--Donor Table-->
                    <table class="table table-hover table-responsive-lg" id="donorTable">
                        <thead>
                            <tr>
                                <th class="text-center">ID</th>
                                <th class="text-center">Full Name</th>
                                <th class="text-center">Date of Birth</th>
                                <th class="text-center">Gender</th>
                                <th class="text-center">Contact #</th>
                                <th class="text-center">City</th>
                                <th class="text-center">Last Donated</th>
                                <th class="text-center">Blood Type</th>
                                <th class="text-center">Action/History</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td class="text-center">1</td>
                                <td class="text-center">Sameer Khowaja</td>
                                <td class="text-center">2000-05-28</td>
                                <td class="text-center">Male</td>
                                <td class="text-center">03333333459</td>
                                <td class="text-center">Karachi</td>
                                <td class="text-center">29-Mar-2021</td>
                                <td class="text-center">AB+</td>

                                <td class="text-center">
                                    <div class="btn-group" role="group">
                                        <button type="button" class="btn btn-success" data-toggle="modal" data-target="#donorDonatedBloodModal"><i class="fa fa-tint"></i></button>
                                        <button type="button" class="btn btn-warning" data-toggle="modal" data-target="#donorEditDataModal"><i class="fa fa-edit"></i></button>
                                        <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#donorDeleteModal"><i class="fa fa-trash"></i></button>
                                    </div>
                                    <div class="btn-group" role="group">
                                        <button type="button" class="btn btn-primary">View History</button>
                                    </div>
                                </td>
                            </tr>
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>

    <!--Donor Edit Data Modal-->
    <div class="modal fade" id="donorEditDataModal" tabindex="-1" role="dialog" aria-labelledby="donorEditDataModal" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h3 class="modal-title text-center">Edit Donor Information</h3>
                </div>
                <form>
                    <div class="modal-body">
                        <table class="table table-borderless">
                            <tbody>
                                <tr>
                                    <th>
                                        <label for="bloodType">ID*</label>
                                    </th>
                                    <td>
                                        <input type="text" class="form-control" id="bloodType" value="1" disabled>
                                    </td>
                                </tr>
                                <tr>
                                    <th>
                                        <label for="firstName">First Name*</label>
                                    </th>
                                    <td>
                                        <input type="text" class="form-control" id="firstName" placeholder="First Name" value="Sameer" required>
                                    </td>
                                </tr>
                                <tr>
                                    <th>
                                        <label for="lastName">Last Name*</label>
                                    </th>
                                    <td>
                                        <input type="text" class="form-control" id="lastName" placeholder="Last Name" value="Khowaja" required>
                                    </td>
                                </tr>
                                <tr>
                                    <th>
                                        <label for="dob">Date of Birth*</label>
                                    </th>
                                    <td>
                                        <input type="date" class="form-control" id="dob" required>
                                    </td>
                                </tr>
                                <tr>
                                    <th>
                                        <label for="gender">Gender*</label>
                                    </th>
                                    <td>
                                        <select class="form-control" id="gender" required>
                                            <option>Male</option>
                                            <option>Male</option>
                                            <option>Female</option>
                                            <option>Other</option>
                                        </select>
                                    </td>
                                </tr>
                                <tr>
                                    <th>
                                        <label for="contactNumber">Contact Number*</label>
                                    </th>
                                    <td>
                                        <input type="text" class="form-control" id="contactNumber" placeholder="Contact Number" value="03333333459" required>
                                    </td>
                                </tr>
                                <tr>
                                    <th>
                                        <label for="city">City*</label>
                                    </th>
                                    <td>
                                        <input type="text" class="form-control" id="city" placeholder="City" value="Karachi" required>
                                    </td>
                                </tr>
                            </tbody>
                        </table>

                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-warning">Update Record</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!--Donor Donated Blood Modal-->
    <div class="modal fade" id="donorDonatedBloodModal" tabindex="-1" role="dialog" aria-labelledby="donorDonatedBloodModal" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h3 class="modal-title text-center">Blood Donation Information</h3>
                </div>
                <form>
                    <div class="modal-body">
                        <table class="table table-borderless">
                            <tbody>
                                <tr>
                                    <th>
                                        <label for="donor_id">ID*</label>
                                    </th>
                                    <td>
                                        <input type="text" class="form-control" id="donor_id" value="1" disabled>
                                    </td>
                                </tr>
                                <tr>
                                    <th>
                                        <label for="fullName">Full Name*</label>
                                    </th>
                                    <td>
                                        <input type="text" class="form-control" id="fullName" value="Sameer Khowaja" disabled>
                                    </td>
                                </tr>
                                <tr>
                                    <td colspan="2">
                                        <h5 class="text-center"><strong>One unit of blood is ~525 mL, which is roughly the equivalent of one pint.</strong></h5>
                                    </td>
                                </tr>
                                <tr>
                                    <th>
                                        <label for="unit_of_blood">Unit of Blood Donated*</label>
                                    </th>
                                    <td>
                                        <input type="text" class="form-control" id="unit_of_blood" placeholder="525" required>
                                    </td>
                                </tr>
                            </tbody>
                        </table>

                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-success">Donate Blood</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!--Delete Donor Data Modal-->
    <div class="modal fade" id="donorDeleteModal" tabindex="-1" role="dialog" aria-labelledby="donorDeleteModal" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h3 class="modal-title text-center">Confirm Delete Donor</h3>
                </div>
                <form>
                    <div class="modal-body">
                        <table class="table table-borderless">
                            <tbody>
                                <tr>
                                    <th>
                                        <label for="donor_id">ID*</label>
                                    </th>
                                    <td>
                                        <input type="text" class="form-control" id="donor_id" value="1" disabled>
                                    </td>
                                </tr>
                                <tr>
                                    <th>
                                        <label for="fullName">Full Name*</label>
                                    </th>
                                    <td>
                                        <input type="text" class="form-control" id="fullName" value="Sameer Khowaja" disabled>
                                    </td>
                                </tr>
                                <tr>
                                    <td colspan="2">
                                        <h5 class="text-center"><strong>Are you Sure to Delete this Donor Record Permanently. (May Effect Other Record)</strong></h5>
                                    </td>
                                </tr>
                            </tbody>
                        </table>

                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-danger">Delete Record</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

</div>