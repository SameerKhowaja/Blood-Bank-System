@{
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
    ViewData["Title"] = "BloodBank Register Donor";
}

<div id="wrapper">
    <!-- Navigation -->
    <nav class="navbar navbar-fixed-top" role="navigation">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                    <i class="fa fa-caret-down fa-lg" aria-hidden="true"></i>
                    <span class="icon-bar"></span>
                </button>

                <button class="navbar-toggle btn-primary btn-lg" data-toggle="collapse" onclick="document.location='@Url.Action("Index", "BankBlood")'">
                    <i class="fa fa-tint" aria-hidden="true"></i> BloodBank2
                </button>

                <a class="navbar-brand logoimg" href="@Url.Action("Index", "Dashboard")">
                    <img src="~/assets/images/logo.png" alt="LOGO" style="width: 190px; height: 45px;">
                </a>
            </div>

            <div class="text-right collapse navbar-collapse" style="margin-top:10px;" id="myBtn">
                <a href="@Url.Action("Index", "BankBlood")" type="button" class="btn btn-lg btn-primary"><i class="fa fa-tint"></i> BloodBank2 Blood Stock Detail</a>
            </div>

            <div class="collapse navbar-collapse" id="myNavbar">
                <ul class="nav navbar-nav side-nav">
                    <li>
                        <a href="@Url.Action("Index", "Dashboard")"><i class="fa fa-home"></i> Dashboard</a>
                    </li>
                    <li>
                        <a href="@Url.Action("BloodRequest", "Dashboard")"><i class="fa fa-tint"></i> Request Blood</a>
                    </li>
                    <li>
                        <a href="@Url.Action("NewDonor", "Dashboard")"><i class="fa fa-plus-square"></i> Add New Donor</a>
                    </li>
                    <li>
                        <a href="@Url.Action("BloodDonors", "Dashboard")"><i class="fa fa-user"></i> Blood Doners</a>
                    </li>
                    <li>
                        <a href="@Url.Action("BloodRecievers", "Dashboard")"><i class="fa fa-address-book"></i> Blood Recievers</a>
                    </li>
                    <li>
                        <a href="@Url.Action("BloodDetail", "Dashboard")"><i class="fa fa-eraser"></i> Blood Detail</a>
                    </li>
                    <li>
                        <a href="@Url.Action("DonationDetail", "Dashboard")"><i class="fa fa-users"></i> Donation Detail</a>
                    </li>
                    <li>
                        <a href="@Url.Action("Logout", "Dashboard")"><i class="fa fa-sign-out"></i> Logout</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- content -->
    <div id="page-wrapper">
        <div class="container-fluid">
            <div class="row" id="main">
                <div class="col-sm-12 col-md-12 well" id="content">
                    <h1 class="text-center">New Donor Registration</h1>

                    <form id="form1" method="post" action="NewDonorAdd" enctype="application/x-www-form-urlencoded">
                        <!--Row 1-->
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label for="firstName">First Name*</label>
                                <input type="text" class="form-control" name="firstName" id="firstName" placeholder="First Name" required>
                            </div>
                            <div class="form-group col-md-6">
                                <label for="lastName">Last Name*</label>
                                <input type="text" class="form-control" name="lastName" id="lastName" placeholder="Last Name" required>
                            </div>
                        </div>
                        <!--Row 2-->
                        <div class="form-row">
                            <div class="form-group col-md-4">
                                <label for="dob">Date of Birth*</label>
                                <input type="date" class="form-control" name="dob" id="dob" max="@DateTime.Now.ToString("yyyy/MM/dd")" required>
                            </div>
                            <div class="form-group col-md-4">
                                <label for="gender">Gender*</label>
                                <select class="form-control" name="gender" id="gender" required>
                                    <option>Male</option>
                                    <option>Female</option>
                                    <option>Other</option>
                                </select>
                            </div>
                            <div class="form-group col-md-4">
                                <label for="blood_type">Blood Type*</label>
                                <select class="form-control" name="blood_type" id="blood_type" required>
                                    <option>O+</option>
                                    <option>O-</option>
                                    <option>A+</option>
                                    <option>A-</option>
                                    <option>B+</option>
                                    <option>B-</option>
                                    <option>AB+</option>
                                    <option>AB-</option>
                                </select>
                            </div>
                        </div>
                        <!--Row 3-->
                        <div class="form-row">
                            <div class="form-group col-md-4">
                                <label for="last_date_donation">Last Date Donated*</label>
                                <input type="date" class="form-control" name="last_date_donation" id="last_date_donation" max="@DateTime.Now.ToString("yyyy/MM/dd")" required>
                            </div>
                            <div class="form-group col-md-4">
                                <label for="contact_number">Contact Number*</label>
                                <input type="text" class="form-control" name="contact_number" id="contact_number" placeholder="Contact Number" onkeyup="if (/\D/g.test(this.value)) this.value = this.value.replace(/\D/g,'')" required>
                            </div>
                            <div class="form-group col-md-4">
                                <label for="email_id">Email Address</label>
                                <input type="email" class="form-control" name="email_id" id="email_id" placeholder="abc@abc.com">
                            </div>
                        </div>
                        <!--Row 4-->
                        <div class="form-row">
                            <div class="form-group col-md-4">
                                <label for="city">City*</label>
                                <input type="text" class="form-control" name="city" id="city" placeholder="City" required>
                            </div>
                            <div class="form-group col-md-8">
                                <label for="address">Address</label>
                                <input type="text" class="form-control" name="address" id="address" placeholder="Address">
                            </div>
                        </div>
                        <!--Row 5-->
                        <div class="form-row">
                            <div class="form-group col-md-12 text-center">
                                <button id="btnSubmit" type="submit" class="btn btn-primary btn-lg">Save Record</button>
                            </div>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>

</div>