@{
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
    ViewData["Title"] = "BloodBank Message";
}

<div id="wrapper">
    <!-- Navigation -->
    <nav class="navbar navbar-fixed-top" role="navigation">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                    <i class="fa fa-caret-down fa-lg" aria-hidden="true"></i>
                    <span class="icon-bar"></span>
                </button>

                <button class="navbar-toggle btn-primary btn-lg" data-toggle="collapse" onclick="document.location='@Url.Action("Index", "BankBlood")'">
                    <i class="fa fa-tint" aria-hidden="true"></i> BloodBank2
                </button>

                <a class="navbar-brand logoimg" href="@Url.Action("Index", "Dashboard")">
                    <img src="~/assets/images/logo.png" alt="LOGO" style="width: 190px; height: 45px;">
                </a>
            </div>

            <div class="text-right collapse navbar-collapse" style="margin-top:10px;" id="myBtn">
                <a href="@Url.Action("Index", "BankBlood")" type="button" class="btn btn-lg btn-primary"><i class="fa fa-tint"></i> BloodBank2 Blood Stock Detail</a>
            </div>

            <div class="collapse navbar-collapse" id="myNavbar">
                <ul class="nav navbar-nav side-nav">
                    <li>
                        <a href="@Url.Action("Index", "Dashboard")"><i class="fa fa-home"></i> Dashboard</a>
                    </li>
                    <li>
                        <a href="@Url.Action("BloodRequest", "Dashboard")"><i class="fa fa-tint"></i> Request Blood</a>
                    </li>
                    <li>
                        <a href="@Url.Action("NewDonor", "Dashboard")"><i class="fa fa-plus-square"></i> Add New Donor</a>
                    </li>
                    <li>
                        <a href="@Url.Action("BloodDonors", "Dashboard")"><i class="fa fa-user"></i> Blood Doners</a>
                    </li>
                    <li>
                        <a href="@Url.Action("BloodRecievers", "Dashboard")"><i class="fa fa-address-book"></i> Blood Recievers</a>
                    </li>
                    <li>
                        <a href="@Url.Action("BloodDetail", "Dashboard")"><i class="fa fa-eraser"></i> Blood Detail</a>
                    </li>
                    <li>
                        <a href="#"><i class="fa fa-sign-out"></i> Logout</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- content -->
    <div id="page-wrapper">
        <div class="container-fluid">
            <div class="row" id="main">
                <div class="col-sm-12 col-md-12 well" id="content">

                    <div class="col-lg-4">
                        <div style="border: 1px solid #C5C2C2;">
                            <table class="table table-hover table-responsive-lg" id="donorTable">
                                <tbody>
                                    <tr>
                                        <th colspan="3"><h3>Donor Information</h3></th>
                                    </tr>
                                    <tr>
                                        <th>First Name</th>
                                        <td colspan="2">@ViewData["firstname"]</td>
                                    </tr>
                                    <tr>
                                        <th>Last Name</th>
                                        <td colspan="2">@ViewData["lastname"]</td>
                                    </tr>
                                    <tr>
                                        <th>Blood Type</th>
                                        <td colspan="2">@ViewData["blood_type"]</td>
                                    </tr>
                                    <tr>
                                        <th>Last Date Donated</th>
                                        <td colspan="2">@ViewData["last_date_donation"]</td>
                                    </tr>
                                    <tr>
                                        <th>Gender</th>
                                        <td colspan="2">@ViewData["gender"]</td>
                                    </tr>
                                    <tr>
                                        <th>Date of Birth</th>
                                        <td colspan="2">@ViewData["dob"]</td>
                                    </tr>
                                    <tr>
                                        <th>Contact #</th>
                                        <td colspan="2">@ViewData["contact_number"]</td>
                                    </tr>
                                    <tr>
                                        <th>City</th>
                                        <td colspan="2">@ViewData["city"]</td>
                                    </tr>
                                    <tr>
                                        <th>Email Address</th>
                                        <td colspan="2">@ViewData["email_id"]</td>
                                    </tr>
                                    <tr>
                                        <th>Address</th>
                                        <td colspan="2">@ViewData["address"]</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>

                    <div class="col-lg-8">
                        <form id="form1" method="post" action="@Url.Action("DonorUpdate", "Dashboard", new { id = @ViewData["donor_id"] })" enctype="application/x-www-form-urlencoded">
                            <!--Row 0-->
                            <div class="form-row">
                                <div class="form-group col-md-12">
                                    <h3 class="text-center">Modify Donor Information</h3>
                                </div>
                            </div>
                            <!--Row 1-->
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label for="firstName">First Name*</label>
                                    <input type="text" class="form-control" name="firstName" id="firstName" placeholder="Firstname" value="@ViewData["firstname"]" required>
                                </div>
                                <div class="form-group col-md-6">
                                    <label for="lastName">Last Name*</label>
                                    <input type="text" class="form-control" name="lastName" id="lastName" placeholder="Lastname" value="@ViewData["lastname"]" required>
                                </div>
                            </div>
                            <!--Row 2-->
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label for="blood_type">Blood Type*</label>
                                    <select class="form-control" name="blood_type" id="blood_type" required>
                                        <option>@ViewData["blood_type"]</option>
                                        <option>O+</option>
                                        <option>O-</option>
                                        <option>A+</option>
                                        <option>A-</option>
                                        <option>B+</option>
                                        <option>B-</option>
                                        <option>AB+</option>
                                        <option>AB-</option>
                                    </select>
                                </div>
                                <div class="form-group col-md-6">
                                    <label for="last_date_donation">Last Date Donated*</label>
                                    <input type="date" class="form-control" name="last_date_donation" id="last_date_donation" value="@ViewData["last_date_donation"]" required>
                                </div>
                            </div>
                            <!--Row 3-->
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label for="gender">Gender*</label>
                                    <select class="form-control" name="gender" id="gender" required>
                                        <option>@ViewData["gender"]</option>
                                        <option>Male</option>
                                        <option>Female</option>
                                        <option>Other</option>
                                    </select>
                                </div>
                                <div class="form-group col-md-6">
                                    <label for="dob">Date of Birth*</label>
                                    <input type="date" class="form-control" name="dob" id="dob" value="@ViewData["dob"]" max="@DateTime.Now.ToString("yyyy/MM/dd")" required>
                                </div>
                            </div>
                            <!--Row 4-->
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label for="contact_number">Contact Number*</label>
                                    <input type="text" class="form-control" name="contact_number" id="contact_number" placeholder="033XXXXXXXXX" value="@ViewData["contact_number"]" required>
                                </div>
                                <div class="form-group col-md-6">
                                    <label for="email_id">Email Address</label>
                                    <input type="email" class="form-control" name="email_id" id="email_id" placeholder="abc@abc.com" value="@ViewData["email_id"]">
                                </div>
                            </div>
                            <!--Row 5-->
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label for="city">City*</label>
                                    <input type="text" class="form-control" name="city" id="city" placeholder="City" value="@ViewData["city"]" required>
                                </div>
                                <div class="form-group col-md-6">
                                    <label for="address">Address</label>
                                    <input type="text" class="form-control" name="address" id="address" placeholder="Address" value="@ViewData["address"]">
                                </div>
                            </div>
                            <!--Row 6-->
                            <div class="form-row">
                                <div class="form-group col-md-12 text-center">
                                    <button id="btnUpdate" type="submit" class="btn btn-warning btn-lg">Update Record</button>
                                    <button id="deleteDonor" type="button" class="btn btn-danger btn-lg">Delete Record</button>
                                </div>
                            </div>
                        </form>
                    </div>

                </div>
            </div>
        </div>
    </div>

    <!--Delete Donor Data Modal-->
    <div class="modal fade" id="donorDeleteModal" tabindex="-1" role="dialog" aria-labelledby="donorDeleteModal" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h3 class="modal-title text-center">Confirm Delete</h3>
                </div>
                <form id="deleteForm" action="">
                    <div class="modal-body">
                        <table class="table table-borderless">
                            <tbody>
                                <tr>
                                    <td>
                                        <h4 class="text-center">Are you Sure to Delete this Donor Record Permanently.</h4>
                                        <h4 class="text-center"><strong>(May Effect Other Record)</strong></h4>
                                    </td>
                                </tr>
                            </tbody>
                        </table>

                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-danger">Delete Record</button>
                    </div>
                </form>
            </div>
        </div>
    </div>


</div>

<script>
    $(document).ready(function () {
        // Delete Modal
        $('#form1').on('click', '#deleteDonor', function () {
            var id = @ViewData["donor_id"];

            // Add data to Modal
            $('#deleteForm').attr('action', '../DonorDelete/' + id);
            $('#donorDeleteModal').modal('show');
        });
    });
</script>